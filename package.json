  },
  "bugs": {
    "url": "https://github.com/HughxDev/nospoon-site/issues",
    "email": "bugs@nospoon.productions"
  },
  "scripts": {
    "svg2png": "inkscape -z -e $OUTFILE -w $WIDTH $INFILE",
    "build-test": "node modernizr-build.js && gulp",
    "crunch": "find ./public/img/source/ -type f -name \"*.png\" -exec guetzli --verbose --quality 84 {} {}.jpg \\; && rename \"s/png.jpg/jpg/\" ./public/img/source/*.png.jpg",
    "progressive": "find ./public/img/source/ -type f -name \"*.jpg\" -exec jpegtran -outfile {}.prog -progressive {} \\; && rename \"s/jpg.prog/prog.jpg/\" ./public/img/source/*.prog",
    "static": "./static.sh",
    "local": "./local.sh",
    "build": "yarn local && yarn static && yarn subset && gulp postprocess",
    "upload": "yarn sync",
    "update": "yarn build && yarn upload",
    "sync": "ssh architect@hughguiney.com \"rm -rf /var/www/nospoon-site/public/dist/\"; scp -r dist/ architect@hughguiney.com:/var/www/nospoon-site/public/dist/",
    "yaml2json": "yaml2json data/ --pretty --save --recursive",
    "log": "subl /usr/local/var/log/httpd/error_log",
    "dev": "rerun rackup",
    "subset": "./subset.sh",
    "postinstall": "brew install ruby-install chruby && ruby-install 3.0.2 && chruby 3.0.2 && bundle install"
  },
  "dependencies": {
    "apache-server-configs": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "del": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^8.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-replace": "^1.1.3",
    "gulp-rev": "^9.0.0",
    "gulp-rev-css-url": "^0.1.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-rewrite": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-webp": "^4.0.1",
    "jquery": "^3.6.1",
    "jquery.repeater": "^1.2.1",
    "modernizr": "^3.12.0",
    "pump": "^3.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-hughx": "^0.0.14",
    "eslint-plugin-import": "^2.26.0",
    "glyphhanger": "^5.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "postcss": "^8.4.18"
  },
  "browserslist": [
    "last 1 version"
  ]
}