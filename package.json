  "description": "No Spoon Productions Website",
  "homepage": "https://nospoon.productions",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HughxDev/nospoon-site.git"
  },
  "author": {
    "name": "Hugh Guiney",
    "email": "hugh@nospoon.productions",
